  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "vitest --config ./vitest.config.ts",
    "prepare": "husky install",
    "clean": "nx run-many -t clean",
    "build": "nx run-many -t build",
    "generate": "npx hygen plop template",
    "storybook": "storybook dev -p 6006",
    "sbtcv": "run-p tcv storybook",
    "build:storybook": "storybook build -o ./dist && pnpm build:tcv",
    "tcv": "npx tailwind-config-viewer -o -c tailwind.config.cjs",
    "build:tcv": "mkdirp ./dist/tcv && npx tailwind-config-viewer -c tailwind.config.cjs export ./dist/tcv",
    "commit": "git-cz",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint .",
    "lint:fix": "pnpm lint --fix",
    "lint-css": "stylelint '**/*.{css,scss}' --fix --cache --cache-location node_modules/.cache/stylelint",
    "lint-staged": "npx lint-staged",
    "prettify": "prettier --ignore-path .gitignore --write \"**/*.(js|jsx|ts|tsx)\" --cache  --cache-location node_modules/.cache/prettier",
    "format": "pnpm lint:fix && pnpm lint-css && pnpm prettify",
    "test:coverage": "vitest run --coverage --config ./vitest.config.ts",
    "test:watch": "vitest --watch --config ./vitest.config.ts",
    "release": "nx release",
    "release:d": "nx release -d"
  },
